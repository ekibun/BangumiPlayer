<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:padding="12dp"
              android:id="@+id/episode_detail"
              app:layout_constraintEnd_toEndOf="parent"
              android:clickable="true"
              android:foreground="?android:attr/selectableItemBackground"
              android:focusable="true"
              app:layout_constraintBottom_toTopOf="@+id/episode_list"
              app:layout_constraintTop_toTopOf="@+id/item_title"/>
    <TextView android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:textAppearance="@android:style/TextAppearance.Material.Subhead"
              android:padding="12dp"
              android:text="@string/episodes"
              android:id="@+id/item_title"
              app:layout_constraintEnd_toStartOf="@+id/episode_detail"
              app:layout_constraintStart_toStartOf="parent"/>
    <android.support.v7.widget.RecyclerView
            android:id="@+id/episode_list"
            android:layout_width="match_parent"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:clipToPadding="false"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/item_title"/>
    <android.support.v7.widget.RecyclerView
            android:id="@+id/season_list"
            android:layout_width="match_parent"
            android:paddingStart="7dp"
            android:paddingEnd="6dp"
            android:paddingBottom="4dp"
            android:clipToPadding="false"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/episode_list"/>
</android.support.constraint.ConstraintLayout>