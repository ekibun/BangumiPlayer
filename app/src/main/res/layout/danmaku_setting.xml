<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:clickable="true"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <View
            android:id="@+id/hide_danmaku_panel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            />
    <ScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#aa000000"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:layout_weight="2">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="vertical"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:padding="8dp"
                      android:text="按类型屏蔽"
                      android:textSize="@dimen/textSizeMedium"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView android:id="@+id/danmaku_top"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:padding="8dp"
                          android:textAlignment="center"
                          android:text="顶部"
                          android:textSize="@dimen/textSizeSmall"/>
                <TextView android:id="@+id/danmaku_scroll"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:padding="8dp"
                          android:textAlignment="center"
                          android:text="滚动"
                          android:textSize="@dimen/textSizeSmall"/>
                <TextView android:id="@+id/danmaku_bottom"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:padding="8dp"
                          android:textAlignment="center"
                          android:text="底部"
                          android:textSize="@dimen/textSizeSmall"/>
                <TextView android:id="@+id/danmaku_special"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:padding="8dp"
                          android:textAlignment="center"
                          android:text="特殊"
                          android:textSize="@dimen/textSizeSmall"/>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorTransGrey"/>
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:padding="8dp"
                      android:text="弹幕设置"
                      android:textSize="@dimen/textSizeMedium"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">
                <TextView
                        android:id="@+id/danmaku_opac_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSizeSmall"
                        android:ellipsize="end"
                        android:paddingBottom="4dp"
                        android:text="不透明度"
                        android:maxLines="1"/>

                <SeekBar
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/danmaku_opac_seek"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="100"/>
                <TextView
                        android:id="@+id/danmaku_opac_value"
                        android:layout_width="35dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSizeSmall"
                        android:paddingBottom="4dp"
                        android:text="100%"
                        android:maxLines="1"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">
                <TextView
                        android:id="@+id/danmaku_size_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSizeSmall"
                        android:ellipsize="end"
                        android:paddingBottom="4dp"
                        android:text="弹幕字号"
                        android:maxLines="1"/>

                <SeekBar
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/danmaku_size_seek"
                        android:layout_weight="1"
                        android:progress="50"
                        android:max="150"/>
                <TextView
                        android:id="@+id/danmaku_size_value"
                        android:layout_width="35dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSizeSmall"
                        android:paddingBottom="4dp"
                        android:text="100%"
                        android:maxLines="1"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">
                <TextView
                        android:id="@+id/danmaku_loc_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSizeSmall"
                        android:ellipsize="end"
                        android:paddingBottom="4dp"
                        android:text="显示区域"
                        android:maxLines="1"/>
                <SeekBar
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/danmaku_loc_seek"
                        android:layout_weight="1"
                        android:progress="3"
                        android:max="4"/>
                <TextView
                        android:id="@+id/danmaku_loc_value"
                        android:layout_width="35dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSizeSmall"
                        android:paddingBottom="4dp"
                        android:text="100%"
                        android:maxLines="1"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">
                <TextView
                        android:id="@+id/danmaku_speed_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSizeSmall"
                        android:ellipsize="end"
                        android:paddingBottom="4dp"
                        android:text="弹幕速度"
                        android:maxLines="1"/>
                <SeekBar
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/danmaku_speed_seek"
                        android:layout_weight="1"
                        android:progress="2"
                        android:max="4"/>
                <TextView
                        android:id="@+id/danmaku_speed_value"
                        android:layout_width="35dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSizeSmall"
                        android:paddingBottom="4dp"
                        android:text="100%"
                        android:maxLines="1"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>