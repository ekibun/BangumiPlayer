<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">
    <View android:layout_height="0dp"
          android:layout_weight="1"
          android:layout_width="match_parent"
          android:id="@+id/item_outside"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="?android:colorBackground"
            android:orientation="vertical">
        <RadioGroup
                android:id="@+id/item_subject_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal">
            <RadioButton
                    android:text="想看"
                    android:button="@null"
                    android:textAlignment="center"
                    android:textColor="@drawable/color_checkable"
                    android:background="@drawable/bg_selectable"
                    android:layout_margin="8dp"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radio_wish"
                    android:layout_weight="1"/>
            <RadioButton
                    android:text="看过"
                    android:button="@null"
                    android:checked="true"
                    android:textAlignment="center"
                    android:textColor="@drawable/color_checkable"
                    android:background="@drawable/bg_selectable"
                    android:layout_margin="8dp"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radio_collect"
                    android:layout_weight="1"/>
            <RadioButton
                    android:text="在看"
                    android:button="@null"
                    android:textAlignment="center"
                    android:textColor="@drawable/color_checkable"
                    android:background="@drawable/bg_selectable"
                    android:layout_margin="8dp"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radio_do"
                    android:layout_weight="1"/>
            <RadioButton
                    android:text="搁置"
                    android:button="@null"
                    android:textAlignment="center"
                    android:textColor="@drawable/color_checkable"
                    android:background="@drawable/bg_selectable"
                    android:layout_margin="8dp"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radio_hold"
                    android:layout_weight="1"/>
            <RadioButton
                    android:text="抛弃"
                    android:button="@null"
                    android:textAlignment="center"
                    android:textColor="@drawable/color_checkable"
                    android:background="@drawable/bg_selectable"
                    android:layout_margin="8dp"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radio_dropped"
                    android:layout_weight="1"/>
        </RadioGroup>
        <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/item_rating"
                android:layout_gravity="center"
                android:isIndicator="false"
                android:numStars="10" android:rating="0"
                android:stepSize="1.0" style="@style/Widget.AppCompat.RatingBar.Indicator"/>
        <LinearLayout
                android:id="@+id/item_tag_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/item_tag_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textAppearance="@android:style/TextAppearance.Material.Subhead"
                    android:text="标签"/>
            <android.support.v7.widget.RecyclerView
                    android:id="@+id/item_tag_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingEnd="20dp"
                    tools:ignore="RtlSymmetry"/>
            <ImageView
                    android:id="@+id/item_tag_add"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:padding="2dp"
                    android:translationX="-20dp"
                    android:src="@drawable/ic_add"
                    android:background="@drawable/bg_round_rect_unchecked"
                    app:layout_constraintTop_toTopOf="@+id/item_tag_title"
                    app:layout_constraintBottom_toBottomOf="@+id/item_tag_title"
                    app:layout_constraintRight_toRightOf="@+id/item_tag_list"/>
        </LinearLayout>
        <soko.ekibun.bangumi.ui.view.CleanableEditText
                android:id="@+id/item_comment"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:hint="@string/comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSizeMedium"/>
        <Switch
                android:id="@+id/item_private"
                android:text="@string/private_collection"
                android:padding="8dp"
                android:textAppearance="@android:style/TextAppearance.Material.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/item_buttons"/>
        <LinearLayout
                android:id="@+id/item_buttons"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/item_remove"
                    android:layout_width="wrap_content"
                    android:tint="?android:textColorSecondary"
                    android:padding="12dp"
                    android:tintMode="src_in"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_height="wrap_content"
                    android:text="删除收藏"/>
            <View android:layout_weight="1"
                  android:layout_height="match_parent"
                  android:layout_width="0dp"/>
            <TextView
                    android:id="@+id/item_submit"
                    android:layout_width="wrap_content"
                    android:tint="?android:textColorSecondary"
                    android:padding="12dp"
                    android:tintMode="src_in"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_height="wrap_content"
                    android:textColor="?colorAccent"
                    android:text="提交"/>
        </LinearLayout>
        <View android:id="@+id/item_keyboard"
              android:layout_width="match_parent"
              android:layout_height="0dp"/>
    </LinearLayout>
</LinearLayout>